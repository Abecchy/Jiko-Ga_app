<% content_for(:title, t('.title')) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.avatar.url %>
      <h1><%= @user.name %></h1>
      <span><%= link_to 'プロフィールを見る', '#' %></span>
      <span><strong>投稿した事故画:</strong> <%= @user.posts.count %></span>
    </section>

    <section class="stats">
      <%= render 'shared/stats' %>

      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to user.avatar.url, '#' %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <h3><%= t('.title') %></h3>

    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>

      <%= paginate @users %>
    <% end %>
  </div>
</div>

<%= link_to '#', class: 'group relative flex h-96 items-end overflow-hidden rounded-lg bg-gray-100 p-4 shadow-lg' do %>
  <%= image_tag 'post_image.jpeg', class: 'absolute inset-0 h-full w-full object-cover object-center transition duration-200 group-hover:scale-110' %>

  <div class="relative flex w-full flex-col rounded-lg p-4 text-center glass">
    <span class="text-gray-500"><%= post.user.name %></span>
    <span class="text-lg font-bold text-gray-800 lg:text-xl"><%= post.title %></span>
    <span class="text-gray-500"><%= l post.created_at, format: :long %></span>
  </div>
<% end %>

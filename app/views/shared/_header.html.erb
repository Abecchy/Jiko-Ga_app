<header class="border-b border-accent">
  <div class="navbar bg-base-100">
    <div class="navbar-start">
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
          </svg>
          Menu
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 border border-primary rounded-box w-52">
          <li>
            <%= link_to t('header.home'), root_path %>
            <%= link_to t('header.post_index'), posts_path %>
            <%= link_to t('header.create_post'), new_post_path %>
            <%= link_to t('header.user_index'), users_path %>
          </li>
        </ul>
      </div>
    </div>
    <div class="navbar-center">
      <%= link_to '事故画美術館', root_path, class: 'btn btn-ghost text-xl' %>
    </div>

    <div class="navbar-end">
      <div class="flex gap-4">
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
            <svg class="h-6 w-6" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z"/>
              <path d="M10 5a2 2 0 0 1 4 0a7 7 0 0 1 4 6v3a4 4 0 0 0 2 3h-16a4 4 0 0 0 2 -3v-3a7 7 0 0 1 4 -6" />
              <path d="M9 17v1a3 3 0 0 0 6 0v-1" />
            </svg>

            <% if current_user.received_notifications.unread.present? %>
              <%= render 'notifications/notification_count' %>
            <% end %>
          </div>
          <%= render 'shared/notifications_dropdown' %>
        </div>

        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
            <div class="w-10 rounded-full">
              <%= image_tag current_user.avatar.url, class: 'rounded-circle' %>
            </div>
          </div>
          <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 border border-primary rounded-box w-52">
            <li>
              <%= link_to current_user.name, profile_path, class: 'justify-between' %>
              <%= link_to t('header.like_index'), likes_posts_path %>
              <%= link_to t('header.logout'), logout_path, data: { turbo_method: :delete } %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

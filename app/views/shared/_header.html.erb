<header class="border-b border-accent">
  <div class="navbar bg-base-100">
    <div class="navbar-start">
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
          Menu
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          <li>
            <%= link_to t('header.home'), root_path %>
            <%= link_to t('header.post_index'), posts_path %>
            <%= link_to t('header.create_post'), new_post_path %>
            <%= link_to t('header.user_index'), users_path %>
          </li>
        </ul>
      </div>
    </div>
    <div class="navbar-center">
      <%= link_to '事故画美術館', root_path, class: 'btn btn-ghost text-xl' %>
    </div>
    <div class="navbar-end">
      <div class="flex-none gap-2">
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
            <div class="w-10 rounded-full">
              <%= image_tag current_user.avatar.url, class: 'rounded-circle' %>
            </div>
          </div>
          <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
            <li>
              <%= link_to current_user.name, profile_path, class: 'justify-between' %>
              <%= link_to t('header.like_index'), likes_posts_path %>
              <%= link_to t('header.logout'), logout_path, data: { turbo_method: :delete } %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

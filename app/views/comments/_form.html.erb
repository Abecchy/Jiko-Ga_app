<div id="comment-form">
  <%= form_with model: comment, url: post_comments_path(post), class: 'mx-auto grid max-w-screen-md gap-4 sm:grid-cols-2' do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="flex items-center sm:col-span-2 gap-4">
      <%= f.text_area :body, class: 'bg-white w-full textarea textarea-bordered text-gray-800', placeholder: t('defaults.input_comment') %>

      <%= f.submit t('defaults.post'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
